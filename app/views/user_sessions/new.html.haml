%h2
  Get everyone 
  %br/
  on the same page.

=form_for @user_session, :url => user_session_path do |f|
  -if @user_session.errors
    %p
      -@user_session.errors.full_messages.each do |msg|
        %li= msg
  %p
    =f.text_field :login
  %p
    =f.label :login
  %p
    =f.password_field :password
  %p
    =f.label :password
  %p
    =f.check_box :remember_me
    =f.label :remember_me
  %p.login
    =f.submit "Login"
    =link_to "Register for access", new_user_url